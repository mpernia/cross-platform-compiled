root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.{cpp,h,hpp}]
indent_size = 4
max_line_length = 100

[*.{yml,yaml,json}]
indent_size = 2

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[*.sh]
indent_size = 2
